{
    "name": "donfactura/dte-api",
    "description": "API para generación de Documentos Tributarios Electrónicos (DTE) Chile",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "DonFactura Team",
            "email": "dev@donfactura.cl"
        }
    ],
    "require": {
        "php": ">=8.0",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "monolog/monolog": "^3.0",
        "robrichards/xmlseclibs": "^3.1",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.5",
        "respect/validation": "^2.2",
        "firebase/php-jwt": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DonFactura\\DTE\\": "src/",
            "DonFactura\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs src/ --standard=PSR12",
        "phpstan": "phpstan analyse src/ --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
